<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE jmxetric-config [
       <!ELEMENT jmxetric-config (sample|ganglia|jvm)*>
       <!ELEMENT sample (mbean)*>
          <!ATTLIST sample delay CDATA #REQUIRED>
       <!ELEMENT mbean (attribute)*>
          <!ATTLIST mbean name CDATA #REQUIRED>
          <!ATTLIST mbean pname CDATA #REQUIRED>
       <!ELEMENT attribute EMPTY>
          <!ATTLIST attribute name CDATA #REQUIRED>
          <!ATTLIST attribute type CDATA #REQUIRED>
          <!ATTLIST attribute units CDATA "" >
          <!ATTLIST attribute pname CDATA "" >
          <!ATTLIST attribute group CDATA "" >
       <!ELEMENT ganglia EMPTY>
          <!ATTLIST ganglia hostname CDATA #REQUIRED>
          <!ATTLIST ganglia port CDATA #REQUIRED>
       <!ELEMENT jvm EMPTY>
          <!ATTLIST jvm pubishName CDATA "">
    ]>
<jmxetric-config>
    <jvm process="JVM" />
    <sample delay="15">
        <mbean name="java.lang:type=Memory" pname="Memory">
            <attribute name="HeapMemoryUsage" type="" units="" pname=""
                slope="both">
                <composite name="init" pname="Heap_init" type="int32"
                    units="bytes" slope="both" />
                <composite name="committed" pname="Heap_committed" type="int32"
                    units="bytes" slope="both" />
                <composite name="used" pname="Heap_used" type="int32"
                    units="bytes" slope="both" />
                <composite name="max" pname="Heap_max" type="int32" units="bytes"
                    slope="both" />
            </attribute>
            <attribute name="NonHeapMemoryUsage" type="" units=""
                pname="" slope="both">
                <composite name="init" pname="NonHeap_init" type="int32"
                    units="bytes" slope="both" />
                <composite name="committed" pname="NonHeap_committed"
                    type="int32" units="bytes" slope="both" />
                <composite name="used" pname="NonHeap_used" type="int32"
                    units="bytes" slope="both" />
                <composite name="max" pname="NonHeap_max" type="int32"
                    units="bytes" slope="both" />
            </attribute>
        </mbean>
        <mbean name="java.lang:type=Threading" pname="Threading">
            <attribute name="ThreadCount" type="int16" units="" pname=""
                slope="both" />
            <attribute name="DaemonThreadCount" type="int16" units=""
                pname="" slope="both" />
        </mbean>
        <!-- 
        <mbean name="java.lang:type=OperatingSystem" pname="OS">
            <attribute name="ProcessCpuTime" type="int32" slope="positive"
                units="" pname="" />
        </mbean>
         -->

        <mbean name="com.talis:name=ZkSequencingMetrics1" pname="H1">
            <attribute name="WriteSequenceOperations"
                pname="Write_Sequence_Operations" type="int32" units="ops" group="Base" slope="both" />
            <attribute name="AverageWriteSequenceLatency"
                pname="Average_Write_Sequence_Latency" type="int32" units="ms" group="Base" slope="both" />
            <attribute name="MinWriteSequenceLatency"
                pname="Min_Write_Sequence_Latency" type="int32" units="ms" group="Base" slope="both" />
            <attribute name="MaxWriteSequenceLatency"
                pname="Max_Write_Sequence_Latency" type="int32" units="ms" group="Base" slope="both" />
            <attribute name="KeyCollisions"
                pname="Key_Collisions" type="int32" units="collisions" group="Base" slope="both" />
            <attribute name="KeyCreations"
                pname="Key_Creations" type="int32" units="keys" group="Base" slope="both" />
            <attribute name="ConnectionLossEvents"
                pname="Connection_Loss_Events" type="int32" units="events" group="Base" slope="both" />
            <attribute name="ErrorResponseCount"
                pname="Error_Response_Count" type="int32" units="errors" group="Base" slope="both" />
            <attribute name="InterruptedExceptions"
                pname="Interrupted_Exceptions" type="int32" units="exceptions" group="Base" slope="both" />
            <attribute name="KeeperExceptions"
                pname="Keeper_Exceptions" type="int32" units="exceptions" group="Base" slope="both" />
            <attribute name="SessionExpiredEvents"
                pname="Session_Expired_Events" type="int32" units="sessions" group="Base" slope="both" />    
        </mbean>
    </sample>
</jmxetric-config>