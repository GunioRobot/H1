<assembly>
	<baseDirectory>h1-${project.version}</baseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/etc</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>log4j.xml</include>
				<include>zkservers</include>
			</includes>
		</fileSet>
		<fileSet>
            <directory>${project.basedir}/etc</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>h1-node-command</include>
                <include>h1-node.init.d</include>
                <include>h1-node.sh</include>
                <include>install_h1_service.sh</include>
            </includes>
            <fileMode>0744</fileMode>
        </fileSet>
		<fileSet>
            <directory>${project.basedir}/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>jmxetric-patch-0.1-patch-4.jar</include>
            </includes>
        </fileSet>
	</fileSets>
</assembly>